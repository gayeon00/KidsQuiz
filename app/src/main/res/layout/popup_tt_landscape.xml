<?xml version="1.0" encoding="utf-8"?>
<!-- popup_it_landscape -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_tt_l"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:gravity="center">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- 팝업 배경 이미지 -->
        <ImageView
            android:src="@drawable/popup_background_img_l"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:orientation="vertical"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:weightSum="1"
            android:orientation="horizontal" >

            <!-- 왼쪽 여백 -->
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:orientation="vertical" >
            </LinearLayout>
            <!-- 왼쪽 여백 -->

            <!-- main -->
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.50"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:weightSum="1"
                    android:orientation="vertical" >

                    <!-- 상단 여백 -->
                    <LinearLayout
                        android:layout_height="0dp"
                        android:layout_width="match_parent"
                        android:layout_weight="0.15"
                        android:orientation="vertical" >
                    </LinearLayout>
                    <!-- 상단 여백 -->

                    <!-- main -->
                    <LinearLayout
                        android:layout_height="0dp"
                        android:layout_width="match_parent"
                        android:layout_weight="0.75"
                        android:orientation="vertical" >

                        <!-- 문제 문장 -->
                        <TextView
                            android:id="@+id/_tt_question_l"
                            android:background="@drawable/popup_question"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:autoSizeMaxTextSize="20sp"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeStepGranularity="1sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/scdream3"
                            android:textColor="@color/white" />
                        <!-- 문제 문장 -->

                        <!-- 보기 선택 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="1"
                            android:layout_gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/_tt_op_l1"
                                android:background="@drawable/round_dotborder_thin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="0.25"
                                android:gravity="center"
                                android:autoSizeMaxTextSize="17sp"
                                android:autoSizeMinTextSize="8sp"
                                android:autoSizeStepGranularity="1sp"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/scdream3"
                                android:textColor="@color/gray" />

                            <TextView
                                android:id="@+id/_tt_op_l2"
                                android:background="@drawable/round_dotborder_thin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="0.25"
                                android:gravity="center"
                                android:autoSizeMaxTextSize="17sp"
                                android:autoSizeMinTextSize="8sp"
                                android:autoSizeStepGranularity="1sp"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/scdream3"
                                android:textColor="@color/gray" />

                            <TextView
                                android:id="@+id/_tt_op_l3"
                                android:background="@drawable/round_dotborder_thin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="0.25"
                                android:gravity="center"
                                android:autoSizeMaxTextSize="17sp"
                                android:autoSizeMinTextSize="8sp"
                                android:autoSizeStepGranularity="1sp"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/scdream3"
                                android:textColor="@color/gray" />

                            <TextView
                                android:id="@+id/_tt_op_l4"
                                android:background="@drawable/round_dotborder_thin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="0.25"
                                android:gravity="center"
                                android:autoSizeMaxTextSize="17sp"
                                android:autoSizeMinTextSize="8sp"
                                android:autoSizeStepGranularity="1sp"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/scdream3"
                                android:textColor="@color/gray" />

                        </LinearLayout>
                        <!-- 보기 선택 -->

                    </LinearLayout>
                    <!-- main -->

                    <!-- 하단 여백 -->
                    <LinearLayout
                        android:layout_height="0dp"
                        android:layout_width="match_parent"
                        android:layout_weight="0.1"
                        android:orientation="vertical" >
                    </LinearLayout>
                    <!-- 하단 여백 -->

                </LinearLayout>

            </LinearLayout>
            <!-- main -->

            <!-- 오른쪽 여백 -->
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:orientation="vertical" >
            </LinearLayout>
            <!-- 오른쪽 여백 -->

        </LinearLayout>

    </FrameLayout>

</LinearLayout>