<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/input_password"
    android:background="@color/lemon"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    ​
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:padding="15dp"
        android:orientation="vertical" >
        ​
        <TextView
            android:id="@+id/input_password_message"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="비밀번호를 입력하세요"
            android:autoSizeMaxTextSize="20sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:textStyle="bold"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/scdream3" />
        ​
        <!-- 비밀번호 입력창 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            ​
            <EditText
                android:id="@+id/passcode_1"
                style="@style/PasscodeInputIStyle" >
                <requestFocus/>
            </EditText>
            ​
            <EditText
                android:id="@+id/passcode_2"
                style="@style/PasscodeInputIStyle" >
            </EditText>
            ​
            <EditText
                android:id="@+id/passcode_3"
                style="@style/PasscodeInputIStyle" >
            </EditText>
            ​
            <EditText
                android:id="@+id/passcode_4"
                style="@style/PasscodeInputIStyle" >
            </EditText>
            ​
        </LinearLayout>
        ​
        <!-- 키패드 -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30dp"
            android:shrinkColumns="*"
            android:stretchColumns="*" >
            ​
            <TableRow>
                ​
                <Button
                    android:id="@+id/button1"
                    style="@style/PasscodeButtonStyle"
                    android:text="1" />
                ​
                <Button
                    android:id="@+id/button2"
                    style="@style/PasscodeButtonStyle"
                    android:text="2" />
                ​
                <Button
                    android:id="@+id/button3"
                    style="@style/PasscodeButtonStyle"
                    android:text="3" />
                ​
            </TableRow>
            ​
            <TableRow>
                ​
                <Button
                    android:id="@+id/button4"
                    style="@style/PasscodeButtonStyle"
                    android:text="4" />
                ​
                <Button
                    android:id="@+id/button5"
                    style="@style/PasscodeButtonStyle"
                    android:text="5" />
                ​
                <Button
                    android:id="@+id/button6"
                    style="@style/PasscodeButtonStyle"
                    android:text="6" />
                ​
            </TableRow>
            ​
            <TableRow>
                ​
                <Button
                    android:id="@+id/button7"
                    style="@style/PasscodeButtonStyle"
                    android:text="7" />
                ​
                <Button
                    android:id="@+id/button8"
                    style="@style/PasscodeButtonStyle"
                    android:text="8" />
                ​
                <Button
                    android:id="@+id/button9"
                    style="@style/PasscodeButtonStyle"
                    android:text="9" />
                ​
            </TableRow>
            ​
            <TableRow>
                ​
                <Button
                    android:id="@+id/button_clear"
                    style="@style/PasscodeButtonStyle"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="Clear" />
                ​
                <Button
                    android:id="@+id/button0"
                    style="@style/PasscodeButtonStyle"
                    android:text="0" />
                ​
                <Button
                    android:id="@+id/button_erase"
                    style="@style/PasscodeButtonStyle"
                    android:text="Del" />
                ​
            </TableRow>
            ​
        </TableLayout>
        ​
    </LinearLayout>

    <com.google.android.ads.nativetemplates.TemplateView
        android:id="@+id/ad_input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:gnt_template_type="@layout/gnt_small_template_view" />
    ​
</RelativeLayout>